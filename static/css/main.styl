@require 'base'

#signin, #signup
  text-align: center
  form
    max-width: 400px
    margin: 10% auto
    text-align: left
    padding: 1em
    h1
      text-align: center
    input, label, button
      display: block
      width: 100%
    input
      margin-bottom: 1em
    label
      margin-bottom: 0.25em
    p
      margin-top: 1em
      text-align: center
      line-height: 2
    button
      margin-top: 1em
      font-weight: bold

#dashboard
  .endpoints
    margin: 0
    padding: 0.5em
    list-style: none
    li
      display: inline-block
      // margin-right: 0.5em
      // margin: 0.25em 0.25em
      margin: 0
      &.endpoint
        border-radius: 3px
        font-family: Consolas, monaco, monospace
        // border: 1px solid #ddd
        box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)
        background: #fff
        padding: 0.5em
        font-size: 0.75em
