@require "base"

#signin, #signup
  font-size: 1.5em
  text-align: center
  form
    width: 400px
    max-width: 100%
    margin: 10% auto
    text-align: left
    span
      font-size: 0.75em
    input, button, span
      display: block
      width: 100%
    input, button, p
      margin-top: 0.5em
    button, p
      text-align: center

#config
  padding: 0.5em
  .usage
    margin-bottom: 1em
    padding: 1em
    border-radius: 2px
    background: #fff
    box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)
    h1
      margin-top: 0
  .help
    padding: 1em
    margin-left: 0.5em
    border-radius: 2px
    background: #fff
    box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)
  table
    background: #fff
    box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23)
    width: 100%
    border-collapse: collapse
    text-align: left
    border-radius: 2px
    .active, .created-at, .add-endpoint
      white-space: nowrap
      padding: 0.5em 1em
      width: 1%
    thead
      tr
        border-bottom: 1px solid #ddd
        th
          font-weight: 300
          padding: 0.5em 0.25em
          &.created-at
            // text-align: right
    tbody
      tr
        border-bottom: 1px solid #efefef
        &:nth-child(even)
          background: rgba(0, 0, 0, 0.02)
        &:hover
          background: rgba(0, 0, 0, 0.05)
        td
          padding: 0.5em 0.25em
          &.active
            text-align: center
            font-size: 1.5em
            padding: 0
            a
              border: 0
              &.activate
                color: red
              &.deactivate
                color: green
          &.id
            font-family: Consolas, monaco, monospace
            a
              border: 0
              color: #999
          &.created-at
            text-align: right
            font-size: 0.75em
          &.add-endpoint
            padding: 1em 0.25em
            text-align: right
            button
              padding: 0.25em 0.5em

#settings
  h2, h3, h4
    margin: 0
    padding: 0.5em
  form
    padding: 0.5em
    input
      min-width: 30%
      width: 300px
    input, button
      margin: 0.5em 0.5em 0 0
  #delete-account
    margin-top: 10em
    button
      padding: 0
      background: none
      text-shadow: none
      box-shadow: none
      color: #990000


div.create-experiment
  padding: 0.5em
  :last-child
    text-align: right


#experiments
  .experiments
    padding: 0
    table
      border-collapse: collapse
      width: 100%
      a
        border: 0
      tr
        border-bottom: 1px solid #eee
        &:nth-child(even)
          background: #f9f9f9
        &:hover
          background: #f4f4f4
        &.deleted
          opacity: 0.3
        td
          &.active, &.archive
            cursor: pointer
          &.endpoint
            font-family: Consolas, monaco, monospace
            span
              background: #eee
              color: #444
        td, th
          padding: 0.75em 0.5em
          &.name, &.endpoint, &.created-at
            text-align: left
          &.created-at, &.active, &.archive, &.endpoint
            width: 0.5%
            white-space: nowrap
          &.active
            text-align: center
            .active
              color: green
            .inactive
              color: red
          &.archive
            font-size: 1.5em
            padding: 0.5em

#experiment
  .summary
    text-align: center
    h1
      font-weight: 900
  .experiment-name
    padding: 0
    font-size: 2em
