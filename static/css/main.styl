@import "base.styl"

#signin, #signup, #forgot
  font-size: 1.5em
  text-align: center
  form
    width: 400px
    max-width: 100%
    margin: 10% auto
    text-align: left
    span
      font-size: 0.75em
    input, button, span
      display: block
      width: 100%
    input, button, p
      margin-top: 0.5em
    button, p
      text-align: center

table
  border-collapse: collapse
  width: 100%
  thead
    border-bottom: 1px solid #eee
  tr
    border-bottom: 1px solid #eee
    &:last-child
      border-bottom: 0
    &:hover
      background: #f4f4f4
    &:nth-child(even)
      background: #f9f9f9
    td, th
      padding: 0.75em 0.5em
  .mini
    width: 0.5%
    white-space: nowrap

#experiments
    tr
      a
        border: 0
      &.deleted
        opacity: 0.3
      td
        &.id
          font-family: Consolas, monaco, monospace
          span
            background: #eee
            color: #444
      td, th
        &.active
          text-align: center
          .active
            color: green
          .inactive
            color: red
        &.archive
          font-size: 1.5em
          padding: 0.5em
  footer
    padding: 0.5em
    :last-child
      text-align: right

#experiment
  header
    input
      @extend h2
      font-size: 1.5em
      width: 100%
      display: block
      padding: 0
      border-bottom: 1px dashed #ccc
  textarea
    display: block
    border: 0
    width: 100%
    padding: 0.5em
    border-radius: 2px
    color: #666
  .export
    p
      font-size: 0.75em
  .icon
    &.active
      color: green
    &.inactive
      color: red
