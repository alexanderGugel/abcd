@require 'base'

#signin, #signup
  text-align: center
  form
    max-width: 400px
    margin: 10% auto
    text-align: left
    padding: 1em
    h1
      text-align: center
    input, label, button, span
      display: block
      width: 100%
    input
      padding-left: 2.5em
    label
      margin: 1em 0 0.25em
    p
      margin-top: 1em
      text-align: center
      line-height: 2
    button
      margin-top: 1em
      font-weight: bold
    .input-group
      position: relative
      .error
        margin-top: 0.25em
      .icon
        position: absolute
        top: -2px
        color: #ccc
        padding: 1em
    .error
      margin-top: 1em

